print(logo)
alphabet = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u',
            'v', 'w', 'x', 'y', 'z','a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u',
            'v', 'w', 'x', 'y', 'z',]


while True:
    direction = input("Type 'encode' to encrypt, type 'decode' to decrypt:\n")
    text = input("Type your message:\n").lower()
    shift = int(input("Type the shift number:\n"))
    shift = shift % 26

    if direction.lower() == "encode":
        def encrypt(a, b):
            message = ""
            for char in text:
                if char in alphabet:
                    index_in_list = alphabet.index(char)
                    index_in_list += shift
                    new_list = alphabet[index_in_list]
                    n = new_list
                    message += n
                else:
                    message += char
            print(f"Your encoded message is {message}.")

        e = encrypt(a=text, b=shift)

    elif direction.lower() == "decode":
        def decrypt(a,b):
            message = ""
            for char in text:
                if char in alphabet:
                    index_in_list = alphabet.index(char)
                    index_in_list -= shift
                    new_list = alphabet[index_in_list]
                    n = new_list
                    message += n
                else:
                    message += char
            print(f"Your decoded message is {message}.")

        d = decrypt(a=text, b=shift)

    msg = input("Type 'yes' if you want to go again, otherwise type 'no':\n")
    if msg.lower() == "no":
        break
